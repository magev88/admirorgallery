	    </submenu>
	    
	    <files>	    
		<filename>index.html</filename>
		<filename>admin.admirorgallery.html.php</filename>
		<filename>admin.admirorgallery.php</filename>
		<filename>toolbar.admirorgallery.php</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>jquery-treeview</folder>
		<folder>screens</folder>
		<folder>scripts</folder>
	    </files>
	    
	    <!-- Administration Language File Copy Section -->
	    <languages folder="languages">
		    <language tag="en-GB">en-GB.com_admirorgallery.ini</language>
		    <language tag="en-GB">en-GB.com_admirorgallery.menu.ini</language>
	    </languages>
	    
