<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content">
	<name>Admiror Gallery Plugin</name>
	<author>Igor Kekeljevic</author>
	<creationDate>01/10/2009</creationDate>	
	<copyright>This extension in released under the GNU/GPL License - http://www.gnu.org/copyleft/gpl.html</copyright>
	<authorEmail></authorEmail>
	<authorUrl>http://www.admiror-design-studio.com</authorUrl>
	<version>2.0 beta</version>
	<description>ADMIRORDESCRIPTION</description>
	
<config>
<fields name="params">
	<fieldset name="basic" default="BASIC SETTINGS">
		<field name="rootFolder" type="text" default="/images/sampledata/" size="50" label="IMAGES ROOT FOLDER" description="IMAGES ROOT FOLDER DESC" />



                <field name="th_height" type="text" default="120" size="5" label="IMAGE THUMBNAIL HEIGHT" description="IMAGE THUMBNAIL HEIGHT DESC" />

		<field name="template" type="folderlist" default="classic" label="GALLERY TEMPLATE" description="GALLERY TEMPLATE DESC" directory="plugins/content/AdmirorGallery/AdmirorGallery/templates" exclude="" stripext="" hide_none="true" hide_default="true" />

		<field name="popupEngine" type="folderlist" default="slimbox" label="POPUP ENGINE" description="POPUP ENGINE DESC" directory="plugins/content/AdmirorGallery/AdmirorGallery/popups" exclude="" stripext="" hide_none="true" hide_default="true" />

		<field name="@spacer" type="spacer" default="" label="" description="" />
	</fieldset>
        <fieldset name="basic" default="GALLERY FRAME SIZE">
		<field name="frame_width" type="text" default="500" size="5" label="GALLERY FRAME WIDTH" description="GALLERY FRAME WIDTH DESC" />
		<field name="frame_height" type="text" default="300" size="5" label="GALLERY FRAME HEIGHT" description="GALLERY FRAME HEIGHT DESC" />
				
		<field name="@spacer" type="spacer" default="" label="" description="" />
		<field type="spacer" default="NEW IMAGES SETTINGS" />
		
		<field name="newImageTag" type="radio" default="1" label="MARK NEW IMAGES" description="MARK NEW IMAGES DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
		
		<field name="newImageTag_days" type="text" default="7" size="5" label="NEW IMAGE DAYS LIMIT" description="NEW IMAGE DAYS LIMIT DESC" />
		<field name="sortImages" type="radio" default="1" label="NEW IMAGES FIRST" description="NEW IMAGES FIRST DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
				
		<field name="@spacer" type="spacer" default="" label="" description="" />
		<field type="spacer" default="ADDITIONAL SETTINGS" />
		
		<field name="showSignature" type="radio" default="1" label="SHOW SIGNATURE" description="SHOW SIGNATURE DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
		
		<field name="ignoreError" type="radio" default="1" label="IGNORE INVALID IMAGE" description="IGNORE INVALID IMAGE DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>

                <field name="ignoreAllError" type="radio" default="0" label="IGNORE NOTICE OF RECOVERABLE ERRORS" description="IGNORE NOTICE OF RECOVERABLE ERRORS DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
		
		<field name="loadjQuery" type="radio" default="1" label="LOAD JQUERY" description="LOAD JQUERY DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>

                <field name="jQueryNoConflict" type="radio" default="1" label="USE NO CONFLICT MODE" description="USE NO CONFLICT MODE DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
		
<!-- 		<param name="deleteThumbFolder" type="list" default="0" label="Delete Thumb Folder On Next Show" description="Delets temporary thumbs folder" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param> -->
		</fieldset>
    </fields>
</config>
	
	<files>
	  	<filename plugin="AdmirorGallery">AdmirorGallery.php</filename>		
		<folder>AdmirorGallery</folder>							
	</files>
    <languages>
            <language tag="en-GB">en-GB.plg_content_AdmirorGallery.ini</language>
    </languages>
</install>
