<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.6" group="content" method="upgrade">

	<name>Admiror Gallery Engine</name>
	<author>Vasiljevski and Kekeljevic</author>
	<creationDate>01/10/2009</creationDate>	
	<copyright>This extension in released under the GNU/GPL License - http://www.gnu.org/copyleft/gpl.html</copyright>
	<authorEmail></authorEmail>
	<authorUrl>http://www.admiror-design-studio.com</authorUrl>
	<version>3.1.0</version>
	<description>ADMIRORDESCRIPTION</description>
	
 <config><fields name="params"><fieldset name="basic">
	    <field type="spacer" default="BASIC SETTINGS" />

		        <field name="rootFolder" type="text" default="/images/stories/" size="20" label="IMAGES ROOT FOLDER" description="IMAGES ROOT FOLDER DESC" />

	        <field name="thumbWidth" type="text" default="200" size="4" label="THUMBNAIL WIDTH" description="THUMBNAIL WIDTH DESC" />

	        <field name="thumbHeight" type="text" default="120" size="4" label="THUMBNAIL HEIGHT" description="THUMBNAIL HEIGHT DESC" />

	        <field name="thumbAutoSize" type="radio" default="none" label="THUMBNAIL AUTO SIZE" description="THUMBNAIL AUTO SIZE DESC">
		        <option value="width">WIDTH</option>
		        <option value="height">HEIGHT</option>
		        <option value="none">NONE</option>
	        </field>	
	        
	        <field name="template" type="folderlist" default="classic" label="GALLERY TEMPLATE" description="GALLERY TEMPLATE DESC" directory="plugins/content/AdmirorGallery/AdmirorGallery/templates" exclude="" stripext="" hide_none="true" hide_default="true" />

	        <field name="popupEngine" type="folderlist" default="slimbox" label="POPUP ENGINE" description="POPUP ENGINE DESC" directory="plugins/content/AdmirorGallery/AdmirorGallery/popups" exclude="" stripext="" hide_none="true" hide_default="true" />

	        <field name="arrange" type="radio" default="priority" label="ARRANGE IMAGES BY" description="ARRANGE IMAGES BY DESC">
		        <option value="priority">PRIORITY</option>
		        <option value="date">DATE</option>
		        <option value="name">NAME</option>
	        </field>


	    <field name="@spacer" type="spacer" default="" label="" description="" />
	    <field type="spacer" default="GALLERY COLORS" />
              
	        <field name="backgroundColor" type="text" default="ffffff" size="6" label="GALLERY BACKGROUND COLOR" description="GALLERY BACKGROUND COLOR DESC" />

	        <field name="foregroundColor" type="text" default="808080" size="6" label="GALLERY FOREGROUND COLOR" description="GALLERY FOREGROUND COLOR DESC" />
	        
	        <field name="highliteColor" type="text" default="fea804" size="6" label="GALLERY HIGHLITE COLOR" description="GALLERY HIGHLITE COLOR DESC" />


	    <field name="@spacer" type="spacer" default="" label="" description="" />
	    <field type="spacer" default="GALLERY FRAME SIZE" />	

	        <field name="frame_width" type="text" default="500" size="5" label="GALLERY FRAME WIDTH" description="GALLERY FRAME WIDTH DESC" />
	        <field name="frame_height" type="text" default="300" size="5" label="GALLERY FRAME HEIGHT" description="GALLERY FRAME HEIGHT DESC" />

	        <field name="@spacer" type="spacer" default="" label="" description="" />
	        <field type="spacer" default="NEW IMAGES SETTINGS" />
	        
	        <field name="newImageTag" type="radio" default="1" label="MARK NEW IMAGES" description="MARK NEW IMAGES DESC">
		        <option value="1">YES</option>
		        <option value="0">NO</option>
	        </field>		
	        
	        <field name="newImageTag_days" type="text" default="7" size="5" label="NEW IMAGE DAYS LIMIT" description="NEW IMAGE DAYS LIMIT DESC" />


	    <field name="@spacer" type="spacer" default="" label="" description="" />
	    <field type="spacer" default="PAGINATION SETTINGS" />	
	        
	        <field name="paginUse" type="radio" default="1" label="USE PAGINATION" description="USE PAGINATION DESC" >
		        <option value="1">YES</option>
		        <option value="0">NO</option>
	        </field>
	        <field name="paginImagesPerGallery" type="text" default="10" size="6" label="IMAGES PER GALLERY" description="IMAGES PER GALLERY DESC" />


	    <field name="@spacer" type="spacer" default="" label="" description="" />
	    <field type="spacer" default="ALBUMS SETTINGS" />	
	        
	        <field name="albumUse" type="radio" default="1" label="USE ALBUMS" description="USE ALBUMS DESC" >
		        <option value="1">YES</option>
		        <option value="0">NO</option>
	        </field>
	        

	    <field name="@spacer" type="spacer" default="" label="" description="" />
	    <field type="spacer" default="ADDITIONAL SETTINGS" />	
	        
	        <field name="showSignature" type="radio" default="1" label="SHOW SIGNATURE" description="SHOW SIGNATURE DESC" >
		        <option value="1">YES</option>
		        <option value="0">NO</option>
	        </field>
	        
	        <field name="plainTextCaptions" type="radio" default="1" label="USE PLAIN TEXT CAPTIONS" description="USE PLAIN TEXT CAPTIONS DESC" >
		        <option value="1">YES</option>
		        <option value="0">NO</option>
	        </field>
	        
	        <field name="ignoreError" type="radio" default="1" label="IGNORE INVALID IMAGE" description="IGNORE INVALID IMAGE DESC" >
		        <option value="1">YES</option>
		        <option value="0">NO</option>
	        </field>

	        <field name="ignoreAllError" type="radio" default="0" label="IGNORE NOTICE OF RECOVERABLE ERRORS" description="IGNORE NOTICE OF RECOVERABLE ERRORS DESC" >
		        <option value="1">YES</option>
		        <option value="0">NO</option>
	        </field>
			</fieldset>
		</fields>
	</config>
	
	<files>
	  	<filename plugin="AdmirorGallery">AdmirorGallery.php</filename>		
		<folder>AdmirorGallery</folder>							
	</files>
    <languages>
            <language tag="en-GB">en-GB.plg_content_AdmirorGallery.ini</language>
    </languages>
</extension>
