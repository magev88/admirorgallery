<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content">
	<name>Admiror Gallery Engine</name>
	<author>Vasiljevski and Kekeljevic</author>
	<creationDate>01/10/2009</creationDate>	
	<copyright>This extension in released under the GNU/GPL License - http://www.gnu.org/copyleft/gpl.html</copyright>
	<authorEmail></authorEmail>
	<authorUrl>http://www.admiror-design-studio.com</authorUrl>
	<version>2.0</version>
	<description>ADMIRORDESCRIPTION</description>
	
	<params>

	<param type="spacer" default="BASIC SETTINGS" />

		<param name="rootFolder" type="text" default="/images/stories/" size="50" label="IMAGES ROOT FOLDER" description="IMAGES ROOT FOLDER DESC" />

                <param name="th_height" type="text" default="120" size="4" label="IMAGE THUMBNAIL HEIGHT" description="IMAGE THUMBNAIL HEIGHT DESC" />

		<param name="template" type="folderlist" default="classic" label="GALLERY TEMPLATE" description="GALLERY TEMPLATE DESC" directory="plugins/content/AdmirorGallery/templates" exclude="" stripext="" hide_none="true" hide_default="true" />

		<param name="popupEngine" type="folderlist" default="slimbox" label="POPUP ENGINE" description="POPUP ENGINE DESC" directory="plugins/content/AdmirorGallery/popups" exclude="" stripext="" hide_none="true" hide_default="true" />

                <param name="foregroundColor" type="text" default="808080" size="6" label="GALLERY FOREGROUND COLOR" description="GALLERY FOREGROUND COLOR DESC" />
               
	        <param name="highliteColor" type="text" default="fea804" size="6" label="GALLERY HIGHLITE COLOR" description="GALLERY HIGHLITE COLOR DESC" />


		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param type="spacer" default="GALLERY FRAME SIZE" />	
	
		<param name="frame_width" type="text" default="500" size="5" label="GALLERY FRAME WIDTH" description="GALLERY FRAME WIDTH DESC" />
		<param name="frame_height" type="text" default="300" size="5" label="GALLERY FRAME HEIGHT" description="GALLERY FRAME HEIGHT DESC" />

                <param name="squareImages" type="radio" default="0" label="MAKE THUMBS SQUARE" description="MAKE THUMBS SQUARE DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param type="spacer" default="NEW IMAGES SETTINGS" />
		
		<param name="newImageTag" type="radio" default="1" label="MARK NEW IMAGES" description="MARK NEW IMAGES DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>		
		
		<param name="newImageTag_days" type="text" default="7" size="5" label="NEW IMAGE DAYS LIMIT" description="NEW IMAGE DAYS LIMIT DESC" />
		<param name="sortImages" type="radio" default="1" label="NEW IMAGES FIRST" description="NEW IMAGES FIRST DESC" >		
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
				
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param type="spacer" default="ADDITIONAL SETTINGS" />	
		
		<param name="showSignature" type="radio" default="1" label="SHOW SIGNATURE" description="SHOW SIGNATURE DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		
		<param name="ignoreError" type="radio" default="1" label="IGNORE INVALID IMAGE" description="IGNORE INVALID IMAGE DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

                <param name="ignoreAllError" type="radio" default="0" label="IGNORE NOTICE OF RECOVERABLE ERRORS" description="IGNORE NOTICE OF RECOVERABLE ERRORS DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		
		<param name="loadjQuery" type="radio" default="1" label="LOAD JQUERY" description="LOAD JQUERY DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

                <param name="jQueryNoConflict" type="radio" default="1" label="USE NO CONFLICT MODE" description="USE NO CONFLICT MODE DESC" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		
<!-- 		<param name="deleteThumbFolder" type="list" default="0" label="Delete Thumb Folder On Next Show" description="Delets temporary thumbs folder" >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param> -->
			
	</params>
	
	<files>
	  	<filename plugin="AdmirorGallery">AdmirorGallery.php</filename>		
		<folder>AdmirorGallery</folder>							
	</files>
    <languages>
            <language tag="en-GB">en-GB.plg_content_AdmirorGallery.ini</language>
    </languages>
</install>
