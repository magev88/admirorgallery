<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
 <name>Admiror Gallery</name>
 <!-- The following elements are optional and free of formatting constraints -->
 <creationDate>Oct 15, 2010</creationDate>
 <author>Vasiljevski and Kekeljevic</author>
 <authorEmail>kekeljevic@hotmail.com</authorEmail>
 <authorUrl>http://www.admiror-design-studio.com</authorUrl>
 <copyright>(C) 2010 All rights reserved.</copyright>
 <license>GNU/GPL</license>
 <version>0.1</version>

  <description>ADMIRORGALLERYADMINISTRATIONSYSTEM</description> 
 
 <files>
  <filename>admirorgallery.php</filename>
  <filename>admirorgallery.xml</filename>
  <filename>controller.php</filename>
  <filename>index.html</filename>
  <folder>css</folder>
  <folder>helpers</folder>
  <folder>views</folder>
 </files>
 
  <administration>
  
      <!-- Administration Menu Section -->
      <menu img="components/com_admirorgallery/images/ag-icon.png">Admiror Gallery</menu>
      <submenu>
	      <!-- Note that all & must be escaped to &amp; for the file to be valid XML and be parsed by the installer -->
	      <menu img="components/com_admirorgallery/images/icon-16-default.png" link="option=com_admirorgallery&amp;task=default">Control Panel</menu>
	      <menu img="components/com_admirorgallery/images/icon-16-templates.png" link="option=com_admirorgallery&amp;task=templates">Templates</menu>
	      <menu img="components/com_admirorgallery/images/icon-16-popups.png" link="option=com_admirorgallery&amp;task=popups">Popups</menu>
	      <menu img="components/com_admirorgallery/images/icon-16-image-manager.png" link="option=com_admirorgallery&amp;task=image-manager">Image Manager</menu>
      </submenu>
      
      <files folder="admin">	    
	  <filename>index.html</filename>
	  <filename>admin.admirorgallery.html.php</filename>
	  <filename>admin.admirorgallery.php</filename>
	  <filename>toolbar.admirorgallery.php</filename>
	  <folder>css</folder>
	  <folder>images</folder>
	  <folder>jquery-treeview</folder>
	  <folder>screens</folder>
	  <folder>scripts</folder>
	  <folder>assets</folder>
      </files>
      
      <!-- Administration Language File Copy Section -->
      <languages folder="languages">
	      <language tag="en-GB">en-GB.com_admirorgallery.ini</language>
	      <language tag="en-GB">en-GB.com_admirorgallery.menu.ini</language>
      </languages>
	      
  </administration>
 
</install>
